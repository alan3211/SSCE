@font-face {
  font-family: Lato;
}

.blanco, a:hover,a:visited{
    color:#FFFFFF;
}

.btn:hover{
  color: #FFFFFF !important;
}

.color-5{
    background-color: #005099;
}
.color-4{
    background-color: #0082C8;
}
.color-3{
    background-color: #01A4E7;
}
.color-2{
    background-color: #C9DBE4;
}
.color-1{
    background-color: #E8F4FC;
}

.large-padding{
    padding-top:40px;
}

.small-padding{
  padding:10px;
}

.back-blanco{
  background-color: #ffffff;
}

.titulos{
  margin:auto;
}

.menu li{
  display: inline-block;
}


.menu li a{
  padding-left:10px ;
  display: inline-block;
  color:#6C1941;
  font-weight: bolder !important;
  text-decoration: none;
}

.navega li{
  display: block;
}
.navega li a, .navega li button{
  background-color: #005099;
  padding: 15px;
  display: block;
  color: #FFFFFF;
  font-weight: bold;
  border: none;
  text-decoration: none;
}

@media screen and (min-width: 1201px) and (max-width: 1920px){
  .margen{
    margin-top: 40px;
  }

  .navega{
    list-style: none;
    padding:0;
    margin-top: 15px;
  }

  .navega li{
    display: inline-block;
  }
  .navega li a{
    padding: 15px;
    display: inline-block;
    color: #FFFFFF;
    font-weight: bold;
    text-decoration: none;
  }
  .tam-letter{
    font-size: 24px;
  }
}

@media screen and (min-width: 1024px) and (max-width: 1200px){
  .margen{
    margin-top: 25px;
  }

  .icono-margin{
    margin-top: -5px;
  }

  .navega{
    list-style: none;
    padding:0;
    margin-top: 15px;
  }

  .navega li{
    display: inline-block;
  }
  .navega li a{
    padding: 15px;
    display: inline-block;
    color: #FFFFFF;
    font-weight: bold;
    text-decoration: none;
  }
  .tam-letter{
    font-size: 18px;
  }
}

@media screen and (min-width: 990px) and (max-width: 1023px){
  .margen{
    margin-top: 20px;
  }

  .icono-margin{
    margin-top: -10px;
  }

  .navega{
    list-style: none;
    padding:0;
    margin-top: 10px;
  }

  .navega li{
    display: inline-block;
  }
  .navega li a{
    padding: 15px;
    display: inline-block;
    color: #FFFFFF;
    font-weight: bold;
    text-decoration: none;
  }
  .tam-letter{
    font-size: 16px;
  }
}

@media screen and (min-width: 768px) and (max-width: 989px){
  .margen{
    margin-top: 15px;
  }

  .icono-margin{
    margin-top: -15px;
  }

  .navega{
    list-style: none;
    margin-top: 10px;
    padding: 0px;
  }

  .navega li{
    display: inline-block;
  }
  .navega li a{
    padding: 10px;
    display: inline-block;
    color: #FFFFFF;
    font-weight: bold;
    text-decoration: none;
  }
  .tam-letter{
    font-size: 13px;
    margin:20px 0 0 0;
    padding: 0px;
  }
}


